apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: theater-msa
  namespace: istio-system
  labels:
    app.kubernetes.io/managed-by: Helm
spec:
  hosts:
  - "theater.{{DOMAIN}}"
  gateways:
  - cp-gateway
  http:
  - match:
    - uri:
        regex: /users(/|$)(.*)
    rewrite:
      uriRegexRewrite:
        match: /users(/|$)(.*)
        rewrite: /\2
    route:
    - destination:
        host: user-service.theater-msa.svc.cluster.local
        port:
          number: 8081
    fault:
      delay:
        percentage:
          value: 0.1
        fixedDelay: 1s
  - match:
    - uri:
        regex: /movies(/|$)(.*)
    rewrite:
      uriRegexRewrite:
        match: /movies(/|$)(.*)
        rewrite: /\2
    route:
    - destination:
        host: movie-service.theater-msa.svc.cluster.local
        port:
          number: 8082
    retries:
      attempts: 3
      perTryTimeout: 2s
  - match:
    - uri:
        regex: /bookings(/|$)(.*)
    rewrite:
      uriRegexRewrite:
        match: /bookings(/|$)(.*)
        rewrite: /\2
    route:
    - destination:
        host: booking-service.theater-msa.svc.cluster.local
        port:
          number: 8083
  - match:
    - uri:
        prefix: /
    route:
    - destination:
        host: api-gateway.theater-msa.svc.cluster.local
        port:
          number: 8080
